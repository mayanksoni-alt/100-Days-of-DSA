#include <stdio.h>

int main(){

    int n, arr[100];

    printf("Enter lenght of array: ");
    scanf("%d", &n);
    
    int i;

    printf("Enter the elements of array: ");
    for(i=0; i<n; i++){
        scanf("%d", &arr[i]);
    }
    int x;
    printf("Enter num to insert: ");
    scanf("%d", &x);
    
    int temp, j;

    for(i=0; i<n; i++){
        for(j=i+1; j<n; j++){
            if(arr[i] > arr[j]){
                temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
    }

    int pos = n;
    for(i=0; i<n; i++){
        if(x < arr[i]){
            pos = i;
            break;
        }
    }
    arr[pos] = x;
    for(i=n; i>pos; i--){
        arr[i] = arr[i - 1];
    }

    printf("After inserting:");
    for(i = 0; i<n; i++){
        printf("%d ", arr[i]);
    }
    printf("After inserting: %d ", arr[i] );
    return 0;
}
